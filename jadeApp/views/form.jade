doctype html
html
  head
    title Form
  body
    div(style="display: flex; flex-direction: column;align-items: center;")
      h1 Form Input
      form(action="/submit", method="POST")
         div(style="background-color: #fff; padding: 20px; border-radius: 5px; box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.4);width:400px")
          div(style="display: flex; flex-direction: column;padding:10px")
            label(for="name") Name:
            input(type="text", name="name")
          div(style="display: flex; flex-direction: column; padding:10px;")
            label(for="email") Email:
            input(type="text", name="email")
            div(style="display: flex; flex-direction: column;align-items:center")
              input(type="submit", value="Submit", style="margin-top:15px;width:100px")
          

